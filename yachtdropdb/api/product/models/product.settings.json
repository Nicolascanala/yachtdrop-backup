{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "product_name": {
      "type": "string",
      "required": true
    },
    "product_description": {
      "type": "string"
    },
    "product_icon": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "product_price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "featured": {
      "type": "boolean",
      "default": true,
      "required": true,
      "private": false
    },
    "type": {
      "type": "string",
      "required": true
    },
    "variaty": {
      "type": "string"
    },
    "region": {
      "type": "string"
    },
    "vintage": {
      "type": "integer"
    },
    "pack": {
      "type": "string",
      "default": "1"
    },
    "pack_format": {
      "type": "string"
    },
    "volume": {
      "type": "string"
    },
    "location": {
      "type": "enumeration",
      "enum": [
        "Mallorca",
        "Montenegro"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "wine",
        "spirits",
        "champagne",
        "beer",
        "softdrinks"
      ],
      "required": true
    }
  }
}
